<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:padding="4dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_fba_cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:minHeight="120dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="24dp"
        android:background="#B2DFDB"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Upgrade to Premium Version to enable Quiz. Upgrading to Premium Version will also disable advertisements."
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_fba_word"
            android:padding="15dp"/>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click here to Upgrade."
        android:id="@+id/bt_fba_buy"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/cv_fba_cardView"
        android:textColor="#FFF"
        android:background="#00796B"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Buy Status"
        android:id="@+id/bt_fba_check"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/bt_fba_buy"
        android:textColor="#FFF"
        android:background="#00796B"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consume."
        android:id="@+id/bt_fba_consume"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/bt_fba_check"
        android:textColor="#FFF"
        android:background="#00796B"/>


</RelativeLayout>
