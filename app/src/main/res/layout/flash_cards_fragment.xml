<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/tv_fcf_word_selection"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:text="Learning Set 09"
            android:layout_height="wrap_content"
            android:background="@drawable/cust_rounder_grey"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="7"
            android:layout_marginBottom="16dp"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:id="@+id/pb_fcf_set_progress"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_below="@+id/tv_fcf_word_selection"
            android:layout_alignLeft="@+id/tv_fcf_word_selection"
            android:layout_alignStart="@+id/tv_fcf_word_selection"
            android:layout_alignRight="@+id/tv_fcf_word_selection"
            android:layout_alignEnd="@+id/tv_fcf_word_selection"
            android:progress="67"/>


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fl_fcf_cardView_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_fcf_set_progress"
            android:layout_margin="8dp"/>
        <Button
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="35dp"
            android:text="I knew the meaning."
            android:background="@drawable/cust_but_green"
            android:textColor="#FFF"
            android:id="@+id/bt_fcf_correct"
            android:layout_below="@+id/fl_fcf_cardView_holder"
            android:layout_alignLeft="@+id/fl_fcf_cardView_holder"
            android:layout_alignStart="@+id/fl_fcf_cardView_holder"
            android:layout_alignRight="@+id/fl_fcf_cardView_holder"
            android:layout_alignEnd="@+id/fl_fcf_cardView_holder"/>

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="35dp"
            android:background="@drawable/cust_but_red"
            android:textColor="#FFF"
            android:padding="0dp"
            android:text="I didn't know the meaning."
            android:id="@+id/bt_fcf_wrong"
            android:layout_below="@+id/bt_fcf_correct"
            android:layout_alignLeft="@+id/fl_fcf_cardView_holder"
            android:layout_alignStart="@+id/fl_fcf_cardView_holder"
            android:layout_alignRight="@+id/fl_fcf_cardView_holder"
            android:layout_alignEnd="@+id/fl_fcf_cardView_holder"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Show Meaning"
            android:id="@+id/bt_fcf_show_meaning"
            android:layout_marginTop="8dp"
            android:background="@drawable/cust_but_green"
            android:textColor="#FFF"
            android:layout_below="@+id/fl_fcf_cardView_holder"
            android:layout_alignLeft="@+id/fl_fcf_cardView_holder"
            android:layout_alignStart="@+id/fl_fcf_cardView_holder"
            android:layout_alignRight="@+id/fl_fcf_cardView_holder"
            android:layout_alignEnd="@+id/fl_fcf_cardView_holder" />

    </RelativeLayout>
</ScrollView>