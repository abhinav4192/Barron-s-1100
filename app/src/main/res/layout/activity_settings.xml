<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_word_selection"
            android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_as_word_selection"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:text="Select List"
            android:layout_height="wrap_content"
            android:background="@drawable/cust_rounder_grey"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="7"
            android:layout_marginBottom="16dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_as_filter_selector"
                android:layout_weight="7"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_as_word_sort"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:text="Sort List"
            android:layout_height="wrap_content"
            android:background="@drawable/cust_rounder_grey"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/ll_word_selection"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_as_aplha"
            android:src="@drawable/ic_atoz_grey"
            android:layout_below="@+id/tv_as_word_sort"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="45dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_as_shuffle"
            android:src="@drawable/ic_shuffle_icon_grey"
            android:layout_below="@+id/tv_as_word_sort"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Alphabetically"
            android:id="@+id/tv_as_alpha"
            android:layout_below="@+id/iv_as_aplha"
            android:layout_alignLeft="@+id/iv_as_aplha"
            android:layout_alignStart="@+id/iv_as_aplha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Shuffle"
            android:gravity="center"
            android:id="@+id/tv_as_shuffle"
            android:layout_below="@+id/iv_as_shuffle"
            android:layout_alignLeft="@+id/iv_as_shuffle"
            android:layout_alignStart="@+id/iv_as_shuffle"
            android:layout_alignRight="@+id/iv_as_shuffle"
            android:layout_alignEnd="@+id/iv_as_shuffle" />

        <TextView
            android:id="@+id/tv_as_word_filter"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:text="Filter"
            android:layout_height="wrap_content"
            android:background="@drawable/cust_rounder_grey"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/tv_as_shuffle"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_as_fav_all"
            android:src="@drawable/ic_circle_outline_grey"
            android:layout_below="@+id/tv_as_word_filter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_as_fav_marked"
            android:src="@drawable/ic_star_solid_grey"
            android:layout_alignTop="@+id/iv_as_fav_all"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/iv_as_fav_unmarked"
            android:src="@drawable/ic_star_outline_grey"
            android:layout_below="@+id/tv_as_word_filter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="All Words"
            android:id="@+id/tv_as_all_words"
            android:layout_below="@+id/iv_as_fav_all"
            android:layout_alignRight="@+id/iv_as_fav_all"
            android:layout_alignEnd="@+id/iv_as_fav_all"
            android:layout_alignLeft="@+id/iv_as_fav_all"
            android:layout_alignStart="@+id/iv_as_fav_all"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Marked"
            android:id="@+id/tv_as_marked_words"
            android:layout_below="@+id/iv_as_fav_marked"
            android:layout_alignLeft="@+id/iv_as_fav_marked"
            android:layout_alignStart="@+id/iv_as_fav_marked"
            android:layout_alignRight="@+id/iv_as_fav_marked"
            android:layout_alignEnd="@+id/iv_as_fav_marked"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Unmarked"
            android:id="@+id/tv_as_unmarked_favourite"
            android:layout_below="@+id/iv_as_fav_unmarked"
            android:layout_alignLeft="@+id/iv_as_fav_unmarked"
            android:layout_alignStart="@+id/iv_as_fav_unmarked"
            android:layout_alignRight="@+id/iv_as_fav_unmarked"
            android:layout_alignEnd="@+id/iv_as_fav_unmarked"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Done"
            android:textColor="#FFF"
            android:background="@drawable/cust_but_green"
            android:id="@+id/bt_as_done"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/tv_as_all_words"/>


    </RelativeLayout>

</ScrollView>